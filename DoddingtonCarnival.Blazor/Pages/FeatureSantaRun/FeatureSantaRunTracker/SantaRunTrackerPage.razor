@page "/santarun/tracker"

@inject NavigationManager NavManager

<PageTitle>Santa Tracker - Doddington Carnival</PageTitle>

<title>Doddington Village SANTA RUN Tracker</title>
<div class="carnivalpage pages paralax carnivalpage-red santaRunFestiveCheer">

    <div class="overlay"></div>
    <div class="container">
        @*         <header>
        <h4 class="line-divider" style="color:white;" @onclick="NavigateToParent">Santa Run</h4>
        <h1>Santa Tracker</h1>
        </header> *@

        <div class="container col-xxl-8 px-4 py-1">

            <div class="card eventCard">
                <div class="card-body">
                    <iframe style="width:100%;height:50vh;" src="https://track-santa.co.uk/map/i/doddingtoncarnival" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>

            <div class="row eventBanner">
                <div class="title">
                    Santa Tracker
                </div>
                <div class="">
                    8- 10 December 2023
                </div>
            </div>

            <div class="card eventCard">
                <div class="card-body">
                    <p>Doddington Village Sports & Carnival are proud to host Santa's visit to our village each year. In the cold dark days of December, we bring Santa around to ALL houses in the village, with a little festive music to sing along to. Kids of all ages are welcome to come out and say hi!</p>

                    <div class="row">
                        <div class="col">
                            <div style="margin: 0; padding: 0; padding-top: 15px;background-color: white; color: #990000; font-size: x-large;">
                                <div class="row" style="background-color: white;margin: 0; padding: 0;">
                                    <h5 style="font-size:medium;">Our Santa Tracker will ping everytime the sleigh moves around Doddington, showing you exactly where we are on each evening!</h5>
                                    <div class="col bold-text" style="text-align: center;">
                                        @*<p style=" font-size:medium;">Coming soon! Watch this space!</p>*@
                                        <p style=" font-size:medium;">No special device or software needed!</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card eventCard">
                <div class="card-header">
                    Santa's route around the Village
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6 col-12">
                            <img src="images/Pages/SantaRun/Titles/SantaRunRoutes.png" class="d-block mx-lg-auto img-fluid" alt="" width="700" height="500" loading="lazy">
                        </div>
                        <div class="col-lg-6 col-12">
                            <p>Santa has kindly visiting Doddington for 3 evenings in December.</p>
                            <p>See which day that he's due to visit your road!</p>

                            <a href="/santarun/routes" class="btn btn-primary btn-block btn-lg px-4 me-md-2">Go to the Santa Run Routes</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    private void NavigateToParent()
    {
        NavManager.NavigateTo("/santarun");
    }

}